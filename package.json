{
  "name": "admin.powerfulyang.com",
  "version": "1.0.0",
  "description": "the management system of powerfulyang.com",
  "scripts": {
    "analyze": "cross-env ANALYZE=1 max build",
    "build": "max build",
    "postinstall": "max setup",
    "jest": "jest",
    "lint": "npm run lint:js && npm run lint:prettier && npm run tsc",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src ",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:prettier": "prettier -c --write \"**/**.{js,jsx,tsx,ts,less,md,json}\"",
    "openapi:local": "cross-env REACT_APP_ENV=dev max openapi",
    "openapi:qa": "cross-env REACT_APP_ENV=qa max openapi",
    "openapi:prod": "cross-env REACT_APP_ENV=prod max openapi",
    "prepare": "husky install",
    "preview": "npm run build && max preview --port 8000",
    "local:dev": "cross-env REACT_APP_ENV=dev MOCK=none UMI_ENV=dev max dev",
    "qa:dev": "cross-env REACT_APP_ENV=qa MOCK=none UMI_ENV=dev max dev",
    "prod:dev": "cross-env REACT_APP_ENV=prod MOCK=none UMI_ENV=dev max dev",
    "tsc": "tsc --noEmit"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "dependencies": {
    "@ant-design/icons": "5.1.2",
    "@ant-design/pro-components": "2.4.16",
    "@ant-design/use-emotion-css": "1.0.4",
    "@micro-zoe/micro-app": "1.0.0-beta.0",
    "@umijs/max": "4.0.69",
    "antd": "5.5.1",
    "classnames": "2.3.2",
    "dayjs": "1.11.7",
    "jotai": "2.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@powerfulyang/lint": "3.2.1",
    "@testing-library/react": "14.0.0",
    "@types/express": "4.17.17",
    "@types/history": "4.7.11",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "cross-env": "7.0.3",
    "mockjs": "1.1.0",
    "swagger-ui-dist": "4.19.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4",
    "umi-presets-pro": "2.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18",
        "dva-core": "2",
        "redux": "3"
      }
    }
  }
}
